<Window x:Class="CleanDesk.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CleanDesk" Width="500" Height="400">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="🧹 CleanDesk — System Optimizer" 
                       FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="{Binding Status}" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding CpuUsage, StringFormat='CPU Usage: {0:F1}%'}" />
            <TextBlock Text="{Binding RamFree, StringFormat='Free RAM: {0:F0} MB'}" />

            <Button Content="🧹 Run Full Cleanup" 
                    FontSize="14" 
                    Background="#FF4CAF50" 
                    Foreground="White" 
                    Padding="8,4" 
                    Margin="0,10,0,0" 
                    Command="{Binding CleanCommand}" />

            <Button Content="⚡ Free RAM" 
                    FontSize="14" 
                    Background="#FF2196F3" 
                    Foreground="White" 
                    Padding="8,4" 
                    Margin="0,5,0,0" 
        Command="{Binding FreeRamCommand}" />

        </StackPanel>
    </Grid>
</Window>